<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/com_100px"
    android:background="@drawable/selector_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/song_id"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/com_40px"
        android:paddingRight="@dimen/com_50px"
        android:text="01"
        android:textColor="#000000"
        android:textSize="@dimen/com_30px" />

    <TextView
        android:id="@+id/song_context"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="月亮之上-凤凰传奇"
        android:textColor="#000000"
        android:textSize="@dimen/com_30px" />

    <TextView
        android:id="@+id/song_fraction"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/com_40px"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="@dimen/com_30px"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/song_img"
        android:layout_width="@dimen/com_100px"
        android:layout_height="@dimen/com_100px"
        android:padding="@dimen/com_120px"
        android:src="@mipmap/music"
        />
</LinearLayout>