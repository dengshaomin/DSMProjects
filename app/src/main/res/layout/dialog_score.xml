<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_select"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/com_20dp"
        android:background="@drawable/shape_song"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/com_10dp"
        android:paddingRight="@dimen/com_10dp"
        >
        <ImageView
            android:layout_width="@dimen/com_20dp"
            android:layout_height="@dimen/com_20dp"
            android:src="@mipmap/muicss"
            android:padding="@dimen/com_5dp"
            />
        <TextView
            android:id="@+id/score_songname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/com_7sp"
            android:textColor="@color/white"
            android:text="月亮之上-未知"
            android:lines="1"
            android:ellipsize="end"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/com_10dp">

        <ImageView
            android:id="@+id/score_img"
            android:layout_width="@dimen/com_80dp"
            android:layout_height="@dimen/com_20dp"
            android:background="@mipmap/good"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/score_score"
            android:layout_width="@dimen/com_40dp"
            android:layout_height="@dimen/com_40dp"

            android:background="@mipmap/score_good"
            android:gravity="center"
            android:text="99分"
            android:textColor="@color/white"
            android:textSize="@dimen/com_7sp"
            android:layout_toEndOf="@id/score_img"
            android:layout_marginLeft="@dimen/com_40dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/com_20dp"
        android:paddingRight="@dimen/com_20dp"
        android:paddingTop="@dimen/com_10dp"
        android:paddingBottom="@dimen/com_20dp"
        >
        <TextView
            android:id="@+id/score_again"
            android:layout_width="@dimen/com_50dp"
            android:layout_height="@dimen/com_20dp"
            android:background="@drawable/selector_button"
            android:text="@string/again"
            android:textSize="@dimen/com_7sp"
            android:gravity="center"
            android:textColor="@drawable/selector_text"
            />
        <TextView
            android:id="@+id/score_exit"
            android:layout_width="@dimen/com_50dp"
            android:layout_height="@dimen/com_20dp"
            android:background="@drawable/selector_button"
            android:text="@string/exit"
            android:textSize="@dimen/com_7sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@drawable/selector_text"
            />
    </RelativeLayout>
</LinearLayout>